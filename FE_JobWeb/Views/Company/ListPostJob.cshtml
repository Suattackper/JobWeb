@using Data_JobWeb.Entity;
@using FE_JobWeb.Others
@model PaginatedList<JobSeekerJobPosting>
@{
    ViewData["Title"] = "ListPostJob";
    Layout = "~/Views/Shared/_LayoutRecuiter.cshtml";
}

<div id="content">
    <div class="content-admin-main">
        <div class="wt-admin-right-page-header clearfix">
            <h2>Quản lý tin đăng tuyển</h2>
            <div class="breadcrumbs">
                <a href="@Url.Action("Index","Home")">Trang chủ</a><a href="@Url.Action("IndexRecruiter","Home")">Dasboard</a><span>Danh sách tin đăng</span>
            </div>
        </div>

        <!--Basic Information-->
        <div class="panel panel-default">
            <div class="panel-heading-with-btn  wt-panel-heading p-a20">
                <h4 class="panel-tittle m-a0"><i class="fa fa-suitcase"></i> Danh sách tin đăng</h4>
                @* <a data-bs-toggle="modal" href="#JobPostingModal" role="button" title="Add"
                   class="site-text-primary">
                    <span class="fa-2x feather-plus-circle"></span>
                </a> *@
            </div>
            <div class="panel-body wt-panel-body m-b30 ">
                <div class="col-lg-12">
                    <div class="user-profile-card">
                        <form action="@Url.Action("ListPostJob","Company", new{ type = "1"})" method="post">
                            <div class="user-profile-card-header-right">
                                <div class="user-profile-search">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Search..." name="search">
                                        <i class="feather-search"></i>
                                    </div>
                                </div>
                                <div class="user-profile-sort">
                                    <div class="form-group">
                                        <select class="wt-select-bar-2 selectpicker" data-live-search="true" name="status" required
                                                data-bv-field="size">
                                            <option selected value="all">Trạng thái duyệt</option>
                                            <option value="SC5">Đã duyệt</option>
                                            <option value="SC7">Chờ duyệt</option>
                                            <option value="SC6">Từ chối</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="user-profile-sort m-b30">
                                    <button type="submit" class="theme-btn w-100">Tìm kiếm</button>
                                </div>
                            </div>
                        </form>
                        <div class="table-responsive profile-applied-job">
                            <table class="table text-nowrap">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tên tin đăng</th>
                                        <th>Ngày đăng</th>
                                        <th>Thời hạn nộp</th>
                                        <th>Lượt nộp</th>
                                        @* <th>Lượt xem</th> *@
                                        <th>Trạng thái</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if(Model.Items != null && Model.Items.Count > 0)
                                    {
                                        int d = 0;
                                        foreach(JobSeekerJobPosting i in Model.Items)
                                        {
                                            d++;
                                            <tr>
                                                <td>@d</td>
                                                <td>
                                                    <div class="profile-job-info">
                                                        <div class="profile-job-content">
                                                            <h6><a href="#">@i.JobTitle</a></h6>
                                                            <ul class="profile-job-list">
                                                                <li><i class="feather-map-pin"></i> @i.Province</li>
                                                                @* <li>
                                                                    <a href="#" class="job-tag-urgent">Tuyển gấp</a>
                                                                </li> *@
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>@(i.TimePost.HasValue ? i.TimePost.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                                                <td>@(i.ExpiredTime.HasValue ? i.ExpiredTime.Value.ToString("dd/MM/yyyy") : "N/A")</td>
                                                @if (ViewBag.JobApply != null && ViewBag.JobApply.Count > 0)
                                                {
                                                    int dd = 0;
                                                    foreach(var ii in ViewBag.JobApply)
                                                    {
                                                        if (i.Id == ii.JobPostingId) dd++;
                                                    }
                                                    <td>@dd</td>
                                                }
                                                else
                                                {
                                                    <td>0</td>
                                                }
                                                @* <td>35</td> *@
                                                @if(i.StatusCode == "SC5")
                                                {
                                                    <td><span class="job-tag-new">Đã duyệt</span></td>
                                                }
                                                else if (i.StatusCode == "SC6")
                                                {
                                                    <td><span class="job-tag-danger">Từ chối</span></td>
                                                }
                                                else
                                                {
                                                    <td><span class="job-tag-pending">Đang chờ duyệt</span></td>
                                                }
                                                <td>
                                                    @{
                                                        var dateString = i.TimePost.HasValue ? i.TimePost.Value.ToString("dd/MM/yyyy") : "N/A";
                                                    }
                                                    <a data-bs-toggle="modal" href="#JobPostingEditModal" onclick="loadEditForm('@i.Id', '@i.JobTitle', '@i.Quantity', '@i.JobCategoryId', '@i.WorkingType', '@i.ExpRequirement', '@i.JobLevelCode', '@i.SalaryMin', '@i.SalaryMax', '@i.AcademicLevel', '@i.GenderRequire', '@i.Province', '@i.District', '@i.Ward', '@dateString', ' @i.Address', '@i.JobDesc' , '@i.JobRequirement' , '@i.BenefitEnjoyed' )"
                                                       class="btn btn-outline-secondary btn-sm">
                                                        <i class="feather-edit"></i>
                                                    </a>
                                                    <a data-bs-toggle="modal" href="#DeleteJobModal" onclick="loadDeleteForm('@i.Id')"
                                                       class="btn btn-outline-danger btn-sm">
                                                        <i class="feather-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- pagination -->
                        @* <div class="pagination-outer">
                            <div class="pagination-style1">
                                <ul class="clearfix">
                                    <li class="prev">
                                        <a href="javascript:;">
                                            <span>
                                                <i class="fa fa-angle-left"></i>
                                            </span>
                                        </a>
                                    </li>
                                    <li><a href="javascript:;">1</a></li>
                                    <li class="active"><a href="javascript:;">2</a></li>
                                    <li><a href="javascript:;">3</a></li>
                                    <li>
                                        <a class="javascript:;" href="javascript:;">
                                            <i class="fa fa-ellipsis-h"></i>
                                        </a>
                                    </li>
                                    <li><a href="javascript:;">5</a></li>
                                    <li class="next">
                                        <a href="javascript:;">
                                            <span>
                                                <i class="fa fa-angle-right"></i>
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div> *@
                        <!-- pagination -->
                        <div class="pagination-outer">
                            <div class="pagination-style1">
                                <ul class="clearfix">
                                    <!-- Previous Page -->
                                    @if (Model.HasPreviousPage)
                                    {
                                        <li class="prev">
                                            <a href="@Url.Action("ListPostJob", "Company", new { page = Model.CurrentPage - 1 })">
                                                <span>
                                                    <i class="fa fa-angle-left"></i>
                                                </span>
                                            </a>
                                        </li>
                                    }
                                    <!-- Page Numbers -->
                                    @for (var i = 1; i <= Model.TotalPages; i++)
                                    {
                                        if (Model.TotalPages >= 5)
                                        {
                                            if (i == Model.CurrentPage - 1)
                                            {
                                                if(i > 3)
                                                {
                                                    <li>
                                                        <a class="javascript:;" href="javascript:;">
                                                            <i class="fa fa-ellipsis-h"></i>
                                                        </a>
                                                    </li>
                                                }
                                            }
                                            if(i == 1 || i == 2 || i == Model.TotalPages || i == Model.TotalPages - 1 || i == Model.CurrentPage || i == Model.CurrentPage - 1 || i == Model.CurrentPage + 1)
                                            {
                                                <li class="@(i == Model.CurrentPage ? "active" : "")">
                                                    <a href="@Url.Action("ListPostJob", "Company", new { page = i })">@i</a>
                                                </li>
                                            }
                                            if (i == Model.CurrentPage + 1)
                                            {
                                                if (i < Model.TotalPages - 2)
                                                {
                                                    <li>
                                                        <a class="javascript:;" href="javascript:;">
                                                            <i class="fa fa-ellipsis-h"></i>
                                                        </a>
                                                    </li>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <li class="@(i == Model.CurrentPage ? "active" : "")">
                                                <a href="@Url.Action("ListPostJob", "Company", new { page = i })">@i</a>
                                            </li>
                                        }
                                    }
                                    <!-- Next Page -->
                                    @if (Model.HasNextPage)
                                    {
                                        <li class="next">
                                            <a href="@Url.Action("ListPostJob", "Company", new { page = Model.CurrentPage + 1 })">
                                                <span>
                                                    <i class="fa fa-angle-right"></i>
                                                </span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Delete Job Popup -->
<div class="modal fade twm-model-popup" id="DeleteJobModal" data-bs-backdrop="static" data-bs-keyboard="false"
     tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form action="@Url.Action("DeletePostJob","Company")" method="post">
            <div class="modal-content">
                <input class="form-control" name="id" type="hidden" id="modaldeleteid" required>
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h4 class="modal-title">Bạn có chắc muốn xóa công việc?</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="site-button" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="site-button outline-primary">Xóa</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Job Posting Edit Popup -->
