    function loadFormJobPost(id, title, quantity, category, worktype, exp, level, salarymin, salarymax, degree, gender, city, district, ward, expiredtime, address, description, require, benefit, companyname, companyemail, applynumber, statuscode) {
        document.getElementById('id').value = id;
