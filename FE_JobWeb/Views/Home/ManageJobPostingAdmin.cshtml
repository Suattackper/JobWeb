@using Data_JobWeb.Entity;
@using FE_JobWeb.Others
@model PaginatedList<JobSeekerJobPosting>
@{
    ViewData["Title"] = "ManageJobPostingAdmin";
    Layout = "~/Views/Shared/_LayoutRecuiter.cshtml";
}
<!-- Page Content Holder -->
<div id="content">
    <div class="content-admin-main">
        <div class="wt-admin-right-page-header clearfix">
            <h3>Admin - Danh sách bài đăng</h3>
            <div class="breadcrumbs">
                <a href="index.html">Trang chủ</a><a href="admin-dashboard.html">Dashboard</a><span>
                    Danh
                    sách bài đăng
                </span>
            </div>
        </div>

        <div class="twm-pro-view-chart-wrap">
            <div class="panel panel-default site-bg-white m-t30">
                <div class="panel-heading wt-panel-heading p-a20">
                    <h4 class="panel-tittle m-a0"><i class="far fa-list-alt"></i>Danh sách các bài đăng</h4>
                </div>
                <div class="user-profile-card">
                    <form action="@Url.Action("ManageJobPostingAdmin","Home", new {type = "1"})" method="post">
                        <div class="user-profile-card-header-right">
                            <div class="user-profile-search">
                                <div class="form-group">
                                    <input type="text" name="search" class="form-control" placeholder="Search...">
                                    <i class="feather-search"></i>
                                </div>
                            </div>
                            <div class="user-profile-sort">
                                <div class="form-group">
                                    <select class="wt-select-bar-large selectpicker" name="status" required
                                            data-live-search="true" data-bv-field="size">
                                        <option selected class="bs-title-option" value="all">
                                            Trạng thái duyệt
                                        </option>
                                        <option value="SC7">Đang chờ duyệt</option>
                                        <option value="SC6">Từ chối</option>
                                        <option value="SC5">Đã duyệt</option>
                                    </select>
                                </div>
                            </div>
                            <div class="user-profile-sort m-b30">
                                <button type="submit" class="theme-btn w-100">Tìm kiếm</button>
                            </div>
                        </div>
                    </form>
                    <!-- Table -->
                    <div class="table-responsive profile-applied-job mt-3">
                        <table class="table text-nowrap">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên doanh nghiệp</th>
                                    <th>Tên công việc</th>
                                    <th>Cấp bậc</th>
                                    <th>Địa điểm</th>
                                    <th>Thời gian đăng tuyển</th>
                                    <th>Trạng thái</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null && Model.Items.Count > 0)
                                {
                                    JobSeekerContext db = new JobSeekerContext();
                                    int d = 0;
                                    foreach (JobSeekerJobPosting i in Model.Items)
                                    {
                                        d++;
                                        <tr>
                                            <td>@d</td>
                                            @{
                                                JobSeekerEnterprise jobSeekerEnterprise = db.JobSeekerEnterprises.FirstOrDefault(p => p.EnterpriseId == i.EnterpriseId);

                                                if (jobSeekerEnterprise != null)
                                                {
                                                    <td class="candidate-name">@jobSeekerEnterprise.FullCompanyName</td>
                                                }
                                                else
                                                {
                                                    <td class="candidate-name">Error</td>
                                                }
                                            }
                                            <td>@i.JobTitle</td>
                                            @{
                                                JobSeekerJobLevel jobSeekerJobLevel = db.JobSeekerJobLevels.FirstOrDefault(p => p.Id == i.JobLevelCode);

                                                if (jobSeekerJobLevel != null)
                                                {
                                                    <td>@jobSeekerJobLevel.JobLevelName</td>
                                                }
                                                else
                                                {
                                                    <td>Error</td>
                                                }
                                            }
                                            <td>@i.Province</td>
                                            <td>@(i.IsCreatedAt.HasValue ? i.IsCreatedAt.Value.ToString("dd/MM/yyyy") : "Error")</td>
                                            @{
                                                switch (i.StatusCode)
                                                {
                                                    case "SC5":
                                                        <td><span class="job-tag-pending">Đã duyệt</span></td>
                                                        break;
                                                    case "SC6":
                                                        <td><span class="job-tag-danger">Đã từ chối</span></td>
                                                        break;
                                                    case "SC7":
                                                        <td><span class="job-tag-new">Đang chờ duyệt</span></td>
                                                        break;
                                                    default:
                                                        <td><span class="job-tag-danger">Error</span></td>
                                                        break;
                                                }
                                            }
                                            <td>
                                                @{
                                                    var dateString = i.TimePost.HasValue ? i.TimePost.Value.ToString("dd/MM/yyyy") : "N/A";

                                                    List<JobSeekerJobPostingApply> apply = db.JobSeekerJobPostingApplies.Where(p => p.JobPostingId == i.Id).ToList();
                                                }
                                                <a data-bs-toggle="modal" href="#JobPostingDetailModal" onclick="loadFormJobPost('@Html.Raw(i.Id)', '@Html.Raw(i.JobTitle)', '@Html.Raw(i.Quantity)', '@Html.Raw(i.JobCategoryId)', '@Html.Raw(i.WorkingType)', '@Html.Raw(i.ExpRequirement)', '@Html.Raw(i.JobLevelCode)', '@Html.Raw(i.SalaryMin)', '@Html.Raw(i.SalaryMax)', '@Html.Raw(i.AcademicLevel)', '@Html.Raw(i.GenderRequire)', '@Html.Raw(i.Province)', '@Html.Raw(i.District)', '@Html.Raw(i.Ward)', '@Html.Raw(dateString)', '@Html.Raw(i.Address)', '@Html.Raw(i.JobDesc)', '@Html.Raw(i.JobRequirement)', '@Html.Raw(i.BenefitEnjoyed)', '@Html.Raw(jobSeekerEnterprise.FullCompanyName)', '@Html.Raw(jobSeekerEnterprise.CompanyEmail)', '@Html.Raw(apply.Count)', '@Html.Raw(i.StatusCode)')"
                                                   class="btn btn-outline-secondary btn-sm"><i class="feather-eye"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="pagination-outer">
                        <div class="pagination-style1">
                            <ul class="clearfix">
                                <!-- Previous Page -->
                                @if (Model.HasPreviousPage)
                                {
                                    <li class="prev">
                                        <a href="@Url.Action("ManageJobPostingAdmin", "Home", new { page = Model.CurrentPage - 1 })">
                                            <span>
                                                <i class="fa fa-angle-left"></i>
                                            </span>
                                        </a>
                                    </li>
                                }
                                <!-- Page Numbers -->
                                @for (var i = 1; i <= Model.TotalPages; i++)
                                {
                                    if (Model.TotalPages >= 5)
                                    {
                                        if (i == Model.CurrentPage - 1)
                                        {
                                            if (i > 3)
                                            {
                                                <li>
                                                    <a class="javascript:;" href="javascript:;">
                                                        <i class="fa fa-ellipsis-h"></i>
                                                    </a>
                                                </li>
                                            }
                                        }
                                        if (i == 1 || i == 2 || i == Model.TotalPages || i == Model.TotalPages - 1 || i == Model.CurrentPage || i == Model.CurrentPage - 1 || i == Model.CurrentPage + 1)
                                        {
                                            <li class="@(i == Model.CurrentPage ? "active" : "")">
                                                <a href="@Url.Action("ManageJobPostingAdmin", "Home", new { page = i })">@i</a>
                                            </li>
                                        }
                                        if (i == Model.CurrentPage + 1)
                                        {
                                            if (i < Model.TotalPages - 2)
                                            {
                                                <li>
                                                    <a class="javascript:;" href="javascript:;">
                                                        <i class="fa fa-ellipsis-h"></i>
                                                    </a>
                                                </li>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <li class="@(i == Model.CurrentPage ? "active" : "")">
                                            <a href="@Url.Action("ManageJobPostingAdmin", "Home", new { page = i })">@i</a>
                                        </li>
                                    }
                                }
                                <!-- Next Page -->
                                @if (Model.HasNextPage)
                                {
                                    <li class="next">
                                        <a href="@Url.Action("ManageJobPostingAdmin", "Home", new { page = Model.CurrentPage + 1 })">
                                            <span>
                                                <i class="fa fa-angle-right"></i>
                                            </span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
