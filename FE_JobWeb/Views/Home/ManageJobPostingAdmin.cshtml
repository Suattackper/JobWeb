<script>
    function loadFormJobPost(id, title, quantity, category, worktype, exp, level, salarymin, salarymax, degree, gender, city, district, ward, expiredtime, address, description, require, benefit, companyname, companyemail, applynumber, statuscode) {
        document.getElementById('id').value = id;
        document.getElementById('title').value = title;
        document.getElementById('quantity').value = quantity;
        document.getElementById('category').value = category;
        document.getElementById('worktype').value = worktype;
        document.getElementById('exp').value = exp;
        document.getElementById('level').value = level;
        document.getElementById('salarymin').value = salarymin;
        document.getElementById('salarymax').value = salarymax;
        document.getElementById('degree').value = degree;
        document.getElementById('gender').value = gender;
        document.getElementById('city').value = city;
        citis.onchange();
        document.getElementById('district').value = district;
        districts.onchange();
        document.getElementById('ward').value = ward;
        document.getElementById('expiredtime').value = expiredtime;
        document.getElementById('address').value = address;
        document.getElementById('description').value = description;
        document.getElementById('require').value = require;
        document.getElementById('benefit').value = benefit;
        document.getElementById('companyname').value = companyname;
        document.getElementById('companyemail').value = companyemail;
        document.getElementById('applynumber').value = applynumber;
        document.getElementById('statuscode').value = statuscode;
    }
    var citis = document.getElementById("city");
    var districts = document.getElementById("district");
    var wards = document.getElementById("ward");
    var Parameter = {
        url: "https://raw.githubusercontent.com/kenzouno1/DiaGioiHanhChinhVN/master/data.json",
        method: "GET",
        responseType: "application/json",
    };
    var promise = axios(Parameter);
    promise.then(function (result) {
        renderCity(result.data);
    });

    function renderCity(data) {
        for (const x of data) {
            var option = new Option(x.Name, x.Name);
            citis.options[citis.options.length] = option;
        }
        citis.onchange = function () {
            district.length = 1;
            ward.length = 1;
            if (this.value != "") {
                const result = data.filter(n => n.Name === this.value);

                for (const k of result[0].Districts) {
                    var option = new Option(k.Name, k.Name);
                    districts.options[districts.options.length] = option;
                }
            }
        };
        districts.onchange = function () {
            ward.length = 1;
            const dataCity = data.filter((n) => n.Name === citis.value);
            if (this.value != "") {
                const dataWards = dataCity[0].Districts.filter(n => n.Name === this.value)[0].Wards;

                for (const w of dataWards) {
                    var option = new Option(w.Name, w.Name);
                    wards.options[wards.options.length] = option;
                }
            }
        };
    }
