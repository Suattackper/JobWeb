                                                    @if (ViewBag.Joblevel != null)
                                                    {
                                                        foreach (var i in ViewBag.Joblevel)
                                                        {
                                                            <option value="@i.Id">@i.JobLevelName</option>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <option value="">Chọn vị trí - cấp bậc</option>
                                                    }
                                                </select>
                                                <i class="fs-input-icon fa fa-user-edit"></i>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Salary Min -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="jobSalaryMin" class="form-label">Mức lương tối thiểu</label>
                                            <div class="ls-inputicon-box">
                                                <input class="form-control" name="salarymin" id="salarymin" type="number" min="0" disabled
